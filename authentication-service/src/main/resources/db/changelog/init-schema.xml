<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="1-initial-users-structure" author="german.tretyakevich">
        <sql>CREATE TYPE user_role AS ENUM ('USER','ADMIN');</sql>
        <createTable tableName="users">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="users_id"></constraints>
            </column>
            <column name="login" type="VARCHAR(250)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="password" type="VARCHAR(250)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="email" type="VARCHAR(250)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="user_roles" type="user_role []">
                <constraints nullable="false"></constraints>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1-1-index-creation-for-users" author="german.tretyakevich">
        <createIndex tableName="users" indexName="users_id_roles_index">
            <column name="id"></column>
            <column name="user_roles"></column>
        </createIndex>
    </changeSet>

</databaseChangeLog>