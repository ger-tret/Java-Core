<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="1-initial-users-structure" author="german.tretyakevich">
        <createTable tableName="users">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="users_id"></constraints>
            </column>
            <column name="name" type="VARCHAR(250)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="surname" type="VARCHAR(250)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="birth_date" type="DATE">
                <constraints nullable="false"></constraints>
            </column>
            <column name="email" type="VARCHAR(250)">
                <constraints nullable="false" unique="true"></constraints>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="1-1-index-creation-for-users" author="german.tretyakevich">
        <createIndex tableName="users" indexName="users_id_name_index">
            <column name="id"></column>
            <column name="name"></column>
        </createIndex>
    </changeSet>
    
    <changeSet id="2-initial-cards-info-scheme" author="german.tretyakevich">
        <createTable tableName="cards_info">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="card_id"></constraints>
            </column>
            <column name="users_id" type="BIGINT">
                <constraints nullable="false" unique="true"></constraints>
            </column>
            <column name="number" type="BIGINT">
                <constraints nullable="false" unique="true"></constraints>
            </column>
            <column name="holder" type="VARCHAR(250)">
                <constraints nullable="false"></constraints>
            </column>
            <column name="expiration_date" type="DATE">
                <constraints nullable="false"></constraints>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2-1-index-creation-for-cards" author="german.tretyakevich">
        <createIndex tableName="cards_info" indexName="ids_card_user_id">
            <column name="id"></column>
            <column name="users_id"></column>
        </createIndex>
    </changeSet>

</databaseChangeLog>